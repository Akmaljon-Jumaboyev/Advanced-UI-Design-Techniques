//_________________________________________________________________________________________________
import 'package:flutter/material.dart';

void main() => runApp(const MyApp());

class MyApp extends StatelessWidget {
  const MyApp({super.key});
  @override
  Widget build(BuildContext context) {
    return const MaterialApp(
      debugShowCheckedModeBanner: false,
      home: Scaffold(
        body: Center(child: AnimatedBox()),
      ),
    );
  }
}

class AnimatedBox extends StatefulWidget {
  const AnimatedBox({super.key});

  @override
  State<AnimatedBox> createState() => _AnimatedBoxState();
}

class _AnimatedBoxState extends State<AnimatedBox> {
  bool _toggled = false;

  @override
  Widget build(BuildContext context) {
    final double size = _toggled ? 180 : 120;
    final Color color = _toggled ? Colors.red : Colors.blue;
    final BorderRadius radius =
        _toggled ? BorderRadius.circular(32) : BorderRadius.circular(4);

    return GestureDetector(
      onTap: () => setState(() => _toggled = !_toggled),
      child: AnimatedContainer(
        width: size,
        height: size,
        decoration: BoxDecoration(color: color, borderRadius: radius),
        duration: const Duration(milliseconds: 400),
        curve: Curves.easeInOut,
      ),
    );
  }
}





//TASK 6
//_________________________________________________________________________________________________
import 'package:flutter/material.dart';

void main() => runApp(const MyApp());

class MyApp extends StatelessWidget {
  const MyApp({super.key});
  @override
  Widget build(BuildContext context) {
    return const MaterialApp(
      debugShowCheckedModeBanner: false,
      home: LogoMovePage(),
    );
  }
}

class LogoMovePage extends StatefulWidget {
  const LogoMovePage({super.key});

  @override
  State<LogoMovePage> createState() => _LogoMovePageState();
}

class _LogoMovePageState extends State<LogoMovePage>
    with SingleTickerProviderStateMixin {
  late final AnimationController _controller;
  late final Animation<Alignment> _alignment;

  @override
  void initState() {
    super.initState();
    _controller =
        AnimationController(vsync: this, duration: const Duration(milliseconds: 800));
    _alignment = AlignmentTween(
      begin: Alignment.centerLeft,
      end: Alignment.centerRight,
    ).animate(CurvedAnimation(parent: _controller, curve: Curves.easeInOut));
  }

  @override
  void dispose() {
    _controller.dispose();
    super.dispose();
  }

  void _run() {
    if (_controller.status == AnimationStatus.completed) {
      _controller.reverse(from: 1);
    } else {
      _controller.forward(from: 0);
    }
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      body: SafeArea(
        child: Column(
          children: [
            Expanded(
              child: AnimatedBuilder(
                animation: _alignment,
                builder: (context, _) {
                  return Align(
                    alignment: _alignment.value,
                    child: const FlutterLogo(size: 80),
                  );
                },
              ),
            ),
            const SizedBox(height: 12),
            Padding(
              padding: const EdgeInsets.only(bottom: 20),
              child: ElevatedButton(
                onPressed: _run,
                child: const Text('Run Animation'),
              ),
            ),
          ],
        ),
      ),
    );
  }
}





